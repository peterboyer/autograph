{
  "name": "@armix/autograph",
  "version": "1.0.0",
  "author": "Peter Boyer <@ptboyer>",
  "repository": "git@github.com:armix-io/autograph.git",
  "license": "Apache-2.0",
  "exports": {
    ".": "./index.js",
    "./express": "./express/index.js"
  },
  "scripts": {
    "dev": "yarn dev:yalc",
    "dev:init": "yarn yalc:init",
    "dev:yalc": "yarn yalc:watch",
    "yalc:init": "yalc publish",
    "yalc:push": "cd dist && yalc push",
    "yalc:watch": "concurrently yarn:watch:*",
    "build": "yarn build:source && yarn build:package",
    "build:source": "tsc",
    "build:package": "cp package.json dist/package.json",
    "watch:source": "tsc -w",
    "watch:package": "onchange -ik 'package.json' -- yarn build:package",
    "watch:yalc": "onchange -ik 'dist/**/*' -- yarn yalc:push",
    "deploy": "./deploy.sh",
    "test": "jest"
  },
  "dependencies": {
    "common-tags": "^1.8.0",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0"
  },
  "peerDependencies": {
    "graphql": "*"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.1",
    "@types/common-tags": "^1.8.1",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "apollo-server": "^2.19.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.6.0",
    "graphql": "^15.5.1",
    "jest": "^26.6.3",
    "onchange": "^7.1.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.0.2"
  }
}
